@model QuestStore.ViewModels.UserNameOnQuest

@{
    ViewData["Title"] = "Delete";
}
<br />
<h1 style="color: red" align="center">HANG ON!</h1>
<br />
<h3 align="center">Are you sure you want to delete this?</h3>
<div>
    <div>There are students on this quest! All mentioned below will be left without rewards:</div>
    @foreach(var name in Model.UsersNameList)
    {
        <div>- @name</div>
    }
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quests.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quests.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quests.Reward)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quests.Reward)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quests.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quests.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quests.Extra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quests.Extra)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Quests.QuestId"/>
        <input type="submit" value="Delete anyway" class="btn btn-danger"/> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
